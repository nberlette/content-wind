{
  "name": "content-windicss",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Nicholas Berlette <nick@berlette.com>",
  "private": true,
  "packageManager": "pnpm@7.1.7",
  "scripts": {
    "dev": "nuxi dev --port ${PORT:-3000}",
    "build": "nuxi build; windicss-analysis --html .analysis",
    "generate": "nuxi generate",
    "preview": "nuxi preview --port ${PORT:-3000}",
    "dev:analysis": "windicss-analysis --port ${ANALYSIS_PORT:-3001}",
    "build:analysis": "windicss-analysis --html .analysis --json .analysis.json",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "eslintConfig": {
    "extends": [
      "@brlt",
      "@nuxtjs/eslint-config-typescript"
    ],
    "ignorePatterns": [
      "dist",
      "node_modules",
      ".output",
      ".nuxt"
    ],
    "root": true,
    "rules": {
      "no-console": "off",
      "no-debugger": "off",
      "no-unused-vars": "off",
      "no-undef": "off",
      "no-unused-expressions": "warn"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx",
            ".vue"
          ]
        }
      },
      "sort-imports": {
        "ignoreDeclarationSort": true,
        "ignoreMemberSort": true
      }
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint",
        "nuxt",
        "react",
        "react-dom",
        "vite",
        "vitest",
        "vue"
      ]
    }
  },
  "devDependencies": {
    "@brlt/eslint-config": "^0.0.4",
    "@brlt/n": "0.1.1",
    "@iconify/vue": "^3.2.1",
    "@nuxt/content": "^2.0.0",
    "@nuxtjs/color-mode": "^3.0.3",
    "@nuxtjs/eslint-config-typescript": "^10.0.0",
    "@typehaus/metropolis": "^12.0.0-next.7",
    "@vueuse/core": "^8.5.0",
    "eslint": "^8.16.0",
    "npm-run-all": "4.1.5",
    "nuxt": "^3.0.0-rc.3",
    "nuxt-component-meta": "^0.1.5",
    "nuxt-windicss": "^2.3.2",
    "pathe": "^0.3.0",
    "typescript": "^4.7.2",
    "windicss": "^3.5.4",
    "windicss-analysis": "^0.3.5"
  }
}
