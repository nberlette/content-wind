{
  "name": "content-wind",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Nicholas Berlette <nick@berlette.com>",
  "private": true,
  "packageManager": "pnpm@8.11.0",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build; windicss-analysis --html .analysis",
    "generate": "nuxi generate",
    "preview": "nuxi preview",
    "dev:analysis": "windicss-analysis",
    "build:analysis": "windicss-analysis --html .analysis --json .analysis.json",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "eslintConfig": {
    "extends": [
      "@brlt",
      "@nuxtjs/eslint-config-typescript"
    ],
    "ignorePatterns": [
      "dist",
      "node_modules",
      ".output",
      ".nuxt"
    ],
    "root": true,
    "rules": {
      "no-console": "off",
      "no-debugger": "off",
      "no-unused-vars": "off",
      "no-undef": "off",
      "no-unused-expressions": "warn"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx",
            ".vue"
          ]
        }
      },
      "sort-imports": {
        "ignoreDeclarationSort": false,
        "ignoreMemberSort": false
      }
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint",
        "nuxt",
        "react",
        "react-dom",
        "vite",
        "vitest",
        "vue"
      ]
    }
  },
  "devDependencies": {
    "@brlt/eslint-config": "^0.0.4",
    "@brlt/n": "0.1.1",
    "@iconify/vue": "^4.1.1",
    "@nuxt/content": "^2.12.1",
    "@nuxtjs/color-mode": "^3.3.2",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@typehaus/metropolis": "12.0.0-next.7",
    "@vueuse/core": "^10.9.0",
    "eslint": "^8.57.0",
    "npm-run-all": "4.1.5",
    "nuxt": "^3.10.3",
    "nuxt-component-meta": "^0.6.3",
    "nuxt-windicss": "^2.6.1",
    "pathe": "^1.1.2",
    "typescript": "^5.4.2",
    "windicss": "^3.5.6",
    "windicss-analysis": "^0.3.5"
  },
  "dependencies": {
    "@unocss/nuxt": "^0.58.6"
  }
}
